//WAP to show the working of break and continue statement

def main():
    print("Example of break statement:")
    for i in range(1, 6):
        if i == 4:
            print("Breaking the loop at", i)
            break
        print("Current value of i:", i)
    print("Loop ended\n")

    print("Example of continue statement:")
    for j in range(1, 6):
        if j == 3:
            print("Skipping the loop iteration at", j)
            continue
        print("Current value of j:", j)
    print("Loop ended")

if __name__ == "__main__":
    main()
