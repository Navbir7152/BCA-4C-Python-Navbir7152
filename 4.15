//WAP to create a list of any specific size. Arrange all the elements in ascending order. Display list before and after sorting

def create_sorted_list(size):
    num_list = [int(input(f"Enter element {i+1}: ")) for i in range(size)]
    print("List before sorting:", num_list)
    num_list.sort()
    print("List after sorting:", num_list)

def main():
    size = int(input("Enter the size of the list: "))
    create_sorted_list(size)

if __name__ == "__main__":
    main()
