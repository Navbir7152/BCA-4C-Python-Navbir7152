//WAP to show the creation and working of lists

def main():
    fruits = ['apple', 'banana', 'orange', 'grape', 'kiwi']
    print("List of fruits:", fruits)
    print("First fruit:", fruits[0])
    print("Last fruit:", fruits[-1])
    fruits[1] = 'mango'
    print("Modified list of fruits:", fruits)
    fruits.append('pineapple')
    print("List after adding pineapple:", fruits)
    removed_fruit = fruits.pop(3)
    print("Removed fruit:", removed_fruit)
    print("List after removing grape:", fruits)
    print("Number of fruits in the list:", len(fruits))
    fruits.sort()
    print("Sorted list of fruits:", fruits)

if __name__ == "__main__":
    main()
