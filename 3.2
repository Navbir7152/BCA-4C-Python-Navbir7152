//WAP to check if a Number is +ve, -ve or zero

def check_number(num):
    if num > 0:
        return "Positive"
    elif num < 0:
        return "Negative"
    else:
        return "Zero"

def main():
    number = float(input("Enter a number: "))
    print("The number is", check_number(number))

if __name__ == "__main__":
    main()
